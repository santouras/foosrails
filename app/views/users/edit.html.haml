- provide(:title, t('users.edit.title'))

%h1= t('users.edit.heading')

.row
  .span6.offset3
    = form_for(@user) do |f|
      = render 'shared/error_messages', object: f.object
      = render 'fields', f: f
      = f.submit t('users.edit.submit'), class: "btn btn-large btn-primary"

    = gravatar_for @user
    %a{href: "http://gravatar.com/emails"}
      = t('users.gravatar.changetext')
